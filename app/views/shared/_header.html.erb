<header>
	<table class="header">
		<tr>
			<td>
				<%= image_tag('LOGO_small.jpg', :alt => 'logo') %>
			</td>
			<td>
				<% if user_signed_in? %>
				<h1>Welcome, <%= current_user.name %></h1>
				<% else %>
				<h1>Welcome to Technology by Design Online Support!</h1>
				<% end %>
			</td>
			<td>
				<ul>
					<% if user_signed_in? %>
					<li><%= link_to "User Profile", '/user' %>&nbsp;|&nbsp;</li>
					<li><%= link_to "Sign Out", destroy_user_session_path,
									:method => :delete %>&nbsp;|&nbsp;</li>
					<% else %>	
					<li><%= link_to "Home", root_path %>&nbsp;|&nbsp;</li>
					<li><%= link_to "Sign in", new_user_session_path %>&nbsp;|&nbsp;</li>
					<li><%= link_to "Sign up", new_user_registration_path %>&nbsp;|&nbsp;</li>
					<% end %>
					<li><%= link_to "Contact Us", "/contact" %></li>
				</ul>
			</td>
		</tr>
	</table>
</header>